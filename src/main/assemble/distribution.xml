<assembly>
    <id>dsworkbench</id>
    <!-- which format do you prefer?
    Possible values are: zip, tar.gz, tar.bz2, jar, dir, war
    See also: http://maven.apache.org/plugins/maven-assembly-plugin/
    -->
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <!-- Insert all jars the project depends on. -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <!-- Define filter to copy into assembly. -->
    <fileSets>
        <fileSet>
            <directory>resources/graphics</directory>
            <outputDirectory>graphics</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>resources/templates</directory>
            <outputDirectory>templates</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>Core/target/</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>ParserPlugin/target/</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>ParserPlugin/target/</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>resources</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>log4j*.xml</include>
                <include>world.dat.gz</include>
                <include>servers.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>resources/Scripts</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>show.tmpl</include>
                <include>DSWorkbench*</include>
                <include>Launcher.bat</include>
                <include>hidecmd.vbs</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>LICENSE</source>
            <outputDirectory></outputDirectory>
        </file>
        <file>
            <source>dsworkbench.jks</source>
            <outputDirectory></outputDirectory>
        </file>
    </files>
</assembly>
