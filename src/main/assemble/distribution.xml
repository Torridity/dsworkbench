<assembly>
    <id>dsworkbench</id>
    <!-- which format do you prefer?
    Possible values are: zip, tar.gz, tar.bz2, jar, dir, war
    See also: http://maven.apache.org/plugins/maven-assembly-plugin/
    -->
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <!-- Insert all jars the project depends on. -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <!-- Define filter to copy into assembly. -->
    <fileSets>
        <fileSet>
            <directory>resources/graphics</directory>
            <outputDirectory>graphics</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>resources/templates</directory>
            <outputDirectory>templates</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>core/target/</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet> 
        <fileSet>
            <directory>ParserPlugin/target/</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>resources/log4j.xml</source>
            <outputDirectory></outputDirectory>
        </file>
        <file>
            <source>resources/world.dat.gz</source>
            <outputDirectory></outputDirectory>
        </file>
        <file>
            <source>resources/servers.txt</source>
            <outputDirectory></outputDirectory>
        </file>
        <file>
            <source>resources/Scripts/show.tmpl</source>
            <outputDirectory>scripts</outputDirectory>
        </file>
        <file>
            <source>resources/Scripts/DSWorkbench</source>
            <outputDirectory></outputDirectory>
        </file>
        <file>
            <source>resources/Scripts/DSWorkbench.bat</source>
            <outputDirectory></outputDirectory>
        </file>
        <file>
            <source>LICENSE</source>
            <outputDirectory></outputDirectory>
        </file>
        <file>
        	<source>resources/Scripts/Launcher.bat</source>
        	<outputDirectory></outputDirectory></file>
        <file>
        	<source>resources/Scripts/hidecmd.vbs</source>
        	<outputDirectory></outputDirectory></file>
    </files>
</assembly>
